    .main-topic
      .main-innner
        %h2.main-innner__subtitle
          %br/
          人生を変える FURIMA-72
        %p.main-innner__text
          FURIMAはだれでもかんたんに出品・購入できる
          %br/
          フリマアプリです
        .main-innner__btn
          = link_to "#", class: "main-innner__btn-a" do
            = image_tag asset_path('Download_on_the_App_Store_Badge_JP_RGB_blk_100317.svg'), class: "abtn", type: '', alt: ''
          = link_to "#", class: "main-innner__btn-g" do
            = image_tag asset_path('google-play-badge.png'), class: "gbtn", type: '', alt: ''
     
