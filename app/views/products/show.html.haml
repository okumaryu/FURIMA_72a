.container
  = render "/shared/header"

%nav.nav-crumbs
  %ul
    %li 
      = link_to "#"do
        FURIMA
    %li
      = icon('fas', 'angle-right')
    %li 
      = link_to @product.category.name
    %li
      = icon('fas', 'angle-right')
    %li 
      = @product.name
.main
  .main-show
    .inner
      .inner-content
        .item-box
          %h2.item-box__name
            = @product.name
          .item-box__img
            %ul
              %li
                = image_tag @product_photos[0].src.to_s
                %ul
                  %li
                    - if @product_photos[1].blank?
                      = image_tag asset_path('logo.png'), type: '', alt: ''
                    - else
                      = image_tag @product_photos[1].src
                  %li
                    - if @product_photos[2].blank?
                      = image_tag asset_path('logo.png'), type: '', alt: ''
                    - else
                      = image_tag @product_photos[2].src
                  %li
                    - if @product_photos[3].blank?
                      = image_tag asset_path('logo.png'), type: '', alt: ''
                    - else
                      = image_tag @product_photos[3].src
          .item-box__price
            %span 
              ¥
              = @product.price.to_s
            .item-box__price-detail
              %span (税込)
              %span 
                - if @product.postagepayer_id == 1
                  送料込み
                - elsif @product.postagepayer_id == 2
                  着払い
                - else
                  選択してください
              - if user_signed_in?
                - if @product.seller_id == current_user.id
                  = link_to edit_product_path(@product), class: "edit-btn" do
                    商品の編集
                  %p
                    or
                  = link_to "#", class: "delete-btn", method: :delete do
                    この商品を削除する
                - else
                  = link_to "#", class: "purchase-btn" do
                    購入画面に進む
          .item-box__text
            = @product.description
          .item-box__table
            %table
              %tbody
                %tr
                  %th 出品者
                  %td 
                    = @product.seller_id
                %tr
                  %th カテゴリー
                  %td
                    = link_to @product.category.name
                %tr
                  %th ブランド
                  %td
                    = @product.brand_id
                %tr
                  %th 商品の状態
                  %td 
                    = @product.productcondition.name
                %tr
                  %th 配送料の負担
                  %td 
                    = @product.postagepayer.name
                %tr
                  %th 発送元の地域
                  %td 
                    = @product.prefecture.name
                %tr
                  %th 発送日の目安
                  %td 
                    = @product.shippingdate.name
          .optional-area
            %ul
              %li.like-btn
                = icon('fas', 'star')
                お気に入り 15
            %ul
              %li.optional-btn
                = link_to "#" do
                  = icon('fas', 'flag')
                  不適切な商品の通報
        .comment-box
          = form_for "#" do |f|
            %textarea(name="comment-body" required="required")
            %p
              相手のことを考え丁寧なコメントを心がけましょう。
              %br
              不快な言葉遣いなどは利用制限や退会処分となることがあります。
            %button(name="button" type="submit")
              = icon('fas', 'comment')
              コメントする
        %ul.links
          %li
            = link_to "#" do
              = icon('fas', 'angle-left')
              %span 前の商品
          %li
            = link_to "#" do
              %span 後ろの商品
              = icon('fas', 'angle-right')
        .related-items
          = link_to "#{@product.category.name}をもっと見る"

  = render "/shared/footer"