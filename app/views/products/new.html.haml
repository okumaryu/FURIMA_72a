.wrapper
  .header02
    = image_tag asset_path('logo.png'), type: '', alt: '', size: "140x41"
  .items
    .body
      = form_for @product do |f|
        .photos
          .upload-box
            .style_formLabel
              %label
                出品画像
              %label.sign
                必須
              %p
              最大１０枚までアップロードできます
            .image-box
              = icon('fas', 'camera')
              %p
                ドラックアンドドロップ
              %p
                またはクリックしてファイルをダウンロード 
              = f.fields_for :productphotos do |i|
                = i.file_field :src     
        .commodity
          .commodity__name
            .style_formLabel
              %p
                商品名
                %label.sign
                  必須
                = f.text_field :name 
          .commodity__detail
            .style_formLabel
              %p
                商品の説明
                %label.sign
                  必須
                = f.text_area :description, class: "commodity__detail__description"
        .details
          .identification__form__field           
            .identification__form__field
              %span.identification__form__field__label カテゴリー
              %span.identification__form__field__arbitrary 必須
              .identification__form__field--input.icon-relative
                = f.collection_select :category_id, Category.all, :id, :category, class: 'input'
                
          .identification__form__field           
            .identification__form__field
              %span.identification__form__field__label 商品の状態
              %span.identification__form__field__arbitrary 必須
              .identification__form__field--input.icon-relative
                = f.collection_select :productcondition_id, Productcondition.all, :id, :name, class: 'input' 
        .delivery
          .style_formLabel
            %p
              配送料金の負担
              %label.sign
                必須
            %select{name: "status"}
              %option{value: "0"} 選択してください
              %option{value: "1"} 送料込み(出品者負担)
              %option{value: "2"} 着払い(購入者負担)
          .style_formLabel
            %span.identification__form__field__lavel 都道府県 
            %span.identification__form__field__arbitrary 任意 
            = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "--", class: 'input'
            .style_formLabel
              %p
                発送までの日数
                %label.sign
                  必須
              %select{:name => "shippingDuration"}
                %option{value:"0"} 選択してください
                %option{value:"1"} 1~2日
                %option{value:"2"} 2~3日
                %option{value:"3"} 4~7日
          .price
            .price__celect
              %label
                販売価格
              %label.sign
                必須
              .price__celect__plate
                ￥
              %input{type: "number", value: "0",class: "profit"}
            .price__fee
              %p
                販売手数料
              %p
                ー
          .bottom
            .profit
              %p
                販売利益
              %p
                ー  
            .buttons    

        = f.submit class: "buttons__sell"
