              %option{ value: "48"} その他 
          .style_formLabel
            %p
              発送までの日数
              %label.sign
                必須
            %select{:name => "shippingDuration"}
              %option{value:"0"} 選択してください
              %option{value:"1"} 1~2日
              %option{value:"2"} 2~3日
              %option{value:"3"} 4~7日
        .price
          .price__celect
            %label
              販売価格
            %label.sign
              必須
            .price__celect__plate
              ￥
            %input{type: "number", value: "0",class: "profit"}
          .price__fee
            %p
              販売手数料
            %p
              ー
        .bottom
          .profit
            %p
              販売利益
            %p
              ー  
