.wrapper
  .header02
    = image_tag asset_path('logo.png'), type: '', alt: '', size: "140x41"
  .items
    .body
      = form_for @product do |f|
        .photos
          .upload-box
            .style_formLabel
              %label
                出品画像
              %label.sign
                必須
              %p
              最大１０枚までアップロードできます
            .image-box
              = icon('fas', 'camera')
              %p
                ドラックアンドドロップ
              %p
                またはクリックしてファイルをダウンロード 
              = f.fields_for :images do |i|
                = i.file_field :src       
        .commodity
          .commodity__name
            .style_formLabel
              %p
                商品名
                %label.sign
                  必須

                = f.text_field :name 
          .commodity__detail
            .style_formLabel
              %p
                商品の説明
                %label.sign
                  必須
                = f.text_area :description, class: "commodity__detail__description"
        .details
          .style_formLabel
            %p
              カテゴリー
              %label.sign
                必須
            %select{name: "category"}
              %option{value:  "0"} 選択してください
              %option{value: "1"} レディース
              %option{value: "2"} メンズ
              %option{value: "3"} ベビー・キッズ
              %option{value: "4"} インテリア・住まい・小物
              %option{value: "5"} 本・音楽・ゲーム
              %option{value: "6"} おもちゃ・ホビー・グッズ
              %option{value: "7"} コスメ・香水・美容
              %option{value: "8"} 家電・スマホ・カメラ
              %option{value: "9"} スポーツ・レジャー
              %option{value: "10"} ハンドメイド
              %option{value: "11"} チケット
              %option{value: "12"} 自動車・オートバイ
              %option{value: "13"} その他
          .style_formLabel
            %p
              ブランド
            %input
          .style_formLabel
            %p
              商品の状態
              %label.sign
                必須
            %select{name: "category"}
              %option{value: "0"} 選択してください
              %option{value: "1"} 新品、未使用に近い
              %option{value: "2"} 目立った傷や汚れなし
              %option{value: "3"} やや汚れあり
              %option{value: "4"} 傷や汚れあり
              %option{value: "5"} 全体的に状態が悪い
        .delivery
          .style_formLabel
            %p
              配送料金の負担
              %label.sign
                必須
            %select{name: "status"}
              %option{value: "0"} 選択してください
              %option{value: "1"} 送料込み(出品者負担)
              %option{value: "2"} 着払い(購入者負担)
          .style_formLabel
            %p
              発送元の地域
              %label.sign
                必須
            %select{name: "region"}
              %option{ value: "0"} 選択してください
              %option{ value: "1"} 北海道
              %option{ value: "2"} 青森県
              %option{ value: "3"} 岩手県
              %option{ value: "4"} 宮城県
              %option{ value: "5"} 秋田県
              %option{ value: "6"} 山形県
              %option{ value: "7"} 福島県
              %option{ value: "8"} 茨城県
              %option{ value: "9"} 栃木県
              %option{ value: "10"} 群馬県
              %option{ value: "11"} 埼玉県
              %option{ value: "12"} 千葉県
              %option{ value: "13"} 東京都
