.wrapper
  .header02
    = image_tag asset_path('logo.png'), type: '', alt: '', size: "140x41"
  .items
    .body
      = form_for @product do |f|
        .photos
          .upload-box
            .style_formLabel
              %label
                出品画像
              %label.sign
                必須
              %p
              最大１０枚までアップロードできます
            .image-box
              = icon('fas', 'camera')
              %p
                ドラックアンドドロップ
              %p
                またはクリックしてファイルをダウンロード 
              = f.fields_for :productphotos do |i|
                = i.file_field :src     
        .commodity
          .commodity__name
            .style_formLabel
              %p
                商品名
                %label.sign
                  必須
                = f.text_field :name 
          .commodity__detail
            .style_formLabel
              %p
                商品の説明
                %label.sign
                  必須
                = f.text_area :description, class: "commodity__detail__description"
        .details
          .identification__form__field           
            .identification__form__field
              %span.identification__form__field__label カテゴリー
              %span.identification__form__field__arbitrary 必須
              .identification__form__field--input.icon-relative
                = f.collection_select :category_id, Category.all, :id, :category, class: 'input'
          = f.fields_for :brand do |f|
            %span ブランド
            %span.form-require-gray 任意
            = f.text_field :name, placeholder: "例）シャネル", value: "", class: "input-default"
          .identification__form__field           
            .identification__form__field
              %span.identification__form__field__label 商品の状態
              %span.identification__form__field__arbitrary 必須
              .identification__form__field--input.icon-relative
                = f.collection_select :productcondition_id, Productcondition.all, :id, :name, class: 'input' 
        .delivery
          .style_formLabel
            %span.identification__form__field__lavel 料金の負担 
            %span.identification__form__field__arbitrary 必須
            = f.collection_select :postagepayer_id, Postagepayer.all, :id, :name, prompt: "選択してください", class: 'input'
            .style_formLabel
          .style_formLabel
            %span.identification__form__field__lavel 発送元の地域
            %span.identification__form__field__arbitrary 必須
            = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "選択してください", class: 'input'
          .style_formLabel
            %span.identification__form__field__lavel 発送までの日数
            %span.identification__form__field__arbitrary 必須
            = f.collection_select :shippingdate_id, Shippingdate.all, :id, :name, prompt: "選択してください", class: 'input'
          .price
            .price__celect
              %span
                販売価格
              %label.sign
                必須
              .price__celect__plate
                ￥
              = f.number_field :price
            .price__fee
              %p
                販売手数料 (10%)
              %p
                ー
          .bottom
            .profit
              %p
                販売利益
              %p
                ー  
            .buttons    

              = f.submit class: "buttons__sell"
