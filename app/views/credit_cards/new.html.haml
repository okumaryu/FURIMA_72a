= render 'shared/header'

.credit_cards-new
  .credit_cards-new__wrapper
    .credit_cards-new__wrapper__title
      クレジットカード情報入力
    .credit_cards-new__wrapper__form
      = form_tag(pay_credit_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
        .credit_cards-new__wrapper__form__cardnumber
          %label カード番号
          %span 必須
          = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
          %br
        .credit_cards-new__wrapper__form__logos
          = image_tag "visa.png", height: '33', width: '46'
          = image_tag "master.png", height: '33', width: '46'
          = image_tag "jcb.png", height: '33', width: '46'
        .credit_cards-new__wrapper__form__expiration-desc
          %label 有効期限
          %span 必須
        .credit_cards-new__wrapper__form__expiration-date
          %select#exp_month{name: "exp_month", type: "text"}
            %option{value: ""} --
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          %p 月
          %select#exp_year{name: "exp_year", type: "text"}
            %option{value: ""} --
            %option{value: "2020"}20
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
          %p 年
          %br
        .credit_cards-new__wrapper__form__cvc
          %label セキュリティコード
          %span 必須
          = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3桁または4桁の番号", maxlength: "4", id: "cvc"
          #card_token
        .credit_cards-new__wrapper__form__submit
          = submit_tag "登録する", id: "token_submit"

= render 'shared/footer'